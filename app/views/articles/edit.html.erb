<h1>Editing article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  <p>Title<br/>
  <%= text_field 'article', 'name'  %></p>
  <p>Text<br/>
  <%= text_area 'article', 'content'  %></p>
  <p>Latitude<br/>
  <%= text_field 'article', 'lat'  %></p>
  <p>Longitude<br/>
  <%= text_field 'article', 'lng'  %></p>
  <%= @map.div(:width => '600px', :height=>'400px') %>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
