	<h3> Login </h3>
	<fieldset>
		
		<h2><%= flash[:notice] %></h2>

	    <% form_tag do %>
	    <p>
	      <label for="name">Name:</label><br>
	      <%= text_field_tag :username, params[:username] %>
	    </p>
	    <p>
	      <label for="password">Password:</label><br>
	      <%= password_field_tag :password, params[:password] %>
	    </p>
	    <p>
	      <%= submit_tag "Login" %>
	    </p>
	    <% end %>
	  </fieldset>


