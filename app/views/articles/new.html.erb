<h1>New content</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
 	<label>Title</label>
  <%= f.text_field 'name'  %>
  <label>Text</label>
  <%= f.text_area 'content'  %>
  <%= f.hidden_field 'lat', :id => "latitude", :value => @cities.first.lat  %>
  <%= f.hidden_field 'lng', :id => "longitude", :value => @cities.first.lng %>

	<h3>Set location</h3>
	
	<label>Choose a city</label>
	<%= f.collection_select :city_id, @cities, :id, :name %>
	<span>and drop the pin on the map below</span>
	
	<div id="map_div" style="width: 800px; height: 300px"></div>
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>

